<h1>Listing pics</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pics.each do |pic| %>
      <tr>
        <td><%= pic.tag %></td>
        <td><%= link_to 'Show', pic %></td>

        <% if pic.user == current_user %>
          <td><%= link_to 'Edit', edit_pic_path(pic) %></td>
          <td><%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pic', new_pic_path %>
<% end %>